doctype html
html(lang="en")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href='https://fonts.googleapis.com/css?family=Varela Round', rel='stylesheet')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="./css/ChatRooms.css")
    script(src="https://code.jquery.com/jquery-3.6.3.min.js")
    script(src="./script/ChatRooms.js")
    title= title
  body#EnterPage
    div#mainContent
     
      h1(class=animationClass)= h1Message
      p(style='color:white; font-size:15px;',class=animationClass)= logInMessage
      if query && query.error === 'unauthorized'
        p(style='color:white; font-size:15px;',class=animationClass) Your session is expired, please sign in again.


      div(class=animationClass)
        form(method=signInMethod, action='/login', class='form')
          div.text-center
            input#username.form-control(name='username', type='username', class=usernameClass, placeholder='Username')

            input#password.form-control(name='password', type='password', class=passwordClass, placeholder='Password')

            button.btn.btn-dark#signIn(class=signInClass) Sign In

        form(method=signUpMethod, action='/signup', class=form)
          button.btn.btn-dark#signUp(class=signUpClass) Sign Up
      
      div.circle-group1.circle-1
      div.circle-group1.circle-2
      div.circle-group1.circle-3

      div.circle-group2.circle-4
      div.circle-group2.circle-5
      div.circle-group2.circle-6
